{
  "_description": "构建矩阵配置 - 直接定义各平台的构建目标和对应的操作系统",
  "_usage": "此文件用于 step-2-build.yml 工作流，定义静态构建矩阵，避免动态生成",
  "matrix": [
    {
      "os": "ubuntu-latest",
      "buildTarget": "StandaloneWindows64",
      "displayName": "Windows 64位"
    },
    {
      "os": "macos-latest", 
      "buildTarget": "StandaloneOSX",
      "displayName": "macOS"
    },
    {
      "os": "ubuntu-latest",
      "buildTarget": "StandaloneLinux64",
      "displayName": "Linux 64位"
    },
    {
      "os": "ubuntu-latest",
      "buildTarget": "Android",
      "displayName": "Android"
    },
    {
      "os": "ubuntu-latest",
      "buildTarget": "WebGL",
      "displayName": "WebGL"
    },
    {
      "os": "macos-latest",
      "buildTarget": "iOS",
      "displayName": "iOS"
    }
  ],
  "default_targets": [
    "StandaloneWindows64",
    "StandaloneOSX"
  ],
  "_notes": [
    "matrix: 定义所有支持的构建目标及其对应的操作系统",
    "default_targets: 当没有指定构建目标时使用的默认目标",
    "displayName: 用于在构建日志中显示的友好名称"
  ]
} 